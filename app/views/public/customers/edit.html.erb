<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <h4><strong>プロフィール編集</strong></h4>
      <%= form_with model: @customer, local: true do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control name" %>
      </div>
      <div class="form-group">
        <%= f.label :profile_image, "プロフィール画像" %>
        <%= f.file_field :profile_image, class: "form-control-file profile_image", accept: 'image/*' %>
      </div>
      <div class="form-group">
        <%= f.label :introduction, "自己紹介" %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit "更新する", class: 'btn btn-outline-secondary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>
