<div class= 'container mt-4'>
  <div class='col-sm-4 mx-auto'>
    <h2 class="text-center">新規会員登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

     
    <div class="field pt-2">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: 'form-control', placeholder: "ユーザー名" %>
    </div>

    <div class="field pt-2">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "sample@example.com" %>
    </div>

    <div class="field pt-2">
      <%= f.label :password, "Password (#{@minimum_password_length}文字以上)" %>
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="field pt-2 pb-4">
      <%= f.label :password_confirmation, "Password (確認用)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>
    <%= render "public/shared/links" %>
    <div class="actions d-flex justify-content-center">
      <%= f.submit "新規登録", :class => "btn btn-outline-secondary mt-4" %>
    </div>
    <% end %>
  </div>
</div>