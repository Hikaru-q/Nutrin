<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <h5><strong>投稿一覧</strong></h5>
      <div class="dropdown">
        <a class="btn btn-outline-secondary btn-sm dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          投稿順
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <p class="dropdown-item"><%= link_to 'いいねの多い順（過去1週間）', root_path %></p>
          <p class="dropdown-item"><%= link_to '古い順', root_path(old: "true") %></p>
          <p class="dropdown-item"><%= link_to '新しい順', root_path(latest: "true") %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container marketing mt-4">
  <div class="row">
  <% @posts.each do |post| %>
    <div class="col-lg-4">
      <p><%= image_tag post.get_image(80,80), class:"rounded-circle"; %></p>
      <h5><strong><%= post.post_name %></strong></h5>
      <p class="small text-black-50"><i class="fas fa-user"></i> <%= post.customer.name %></p>
      <p class="small text-black-50"><i class="fas fa-heart"></i> <%= post.favorites.count %></p>
      <p><%= link_to "詳細を見る", post_path(post), class:"btn btn-outline-secondary" %></p>
    </div>
  <% end %>
  </div>
</div>
