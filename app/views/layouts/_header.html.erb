<nav class="navbar navbar-expand-lg navbar-light">
  <div class="container">
    <div class="navbar navbar-brand">
      <%= link_to root_path do %>
          <%= image_tag 'Nutrin.png', size: '150x70' %>
      <% end %>
    </div>
    <!-- 検索機能 -->
    <div class="row">
      <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%= f.text_field :q, required: true, class: "form-control d-inline-block w-auto", type: "search", placeholder: "検索", aria_label: "検索" %>
        <button class="btn btn-outline-success" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      <% end %>
    </div>
    <ul class="navbar-nav ml-auto">
      <!--管理者のログイン時-->
      <% if admin_signed_in? %>
        <li>
          <%= link_to admin_posts_path, class: "nav-link mt-3" do %>
          <i class="fas fa-coffee"></i>
            投稿一覧
          <% end %>
        </li>
        <li>
          <%= link_to admin_customers_path, class: "nav-link mt-3" do %>
          <i class="fas fa-user-friends"></i>
            ユーザ一覧
          <% end %>
        </li>
        <li>
          <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link mt-3" do %>
          <i class="fas fa-sign-out-alt"></i>
            ログアウト
          <% end %>
        </li>
      <!--ユーザーのログイン時-->
      <% elsif customer_signed_in? %>
        <li>
          <%= link_to new_post_path, class: "nav-link mt-3" do %>
          <i class="fas fa-pencil"></i>
            投稿する
          <% end %>
        </li>
        <li>
          <%= link_to customer_path(current_customer), class: "nav-link mt-3" do %>
          <i class="fas fa-user-cog"></i>
            マイページ
          <% end %>
        </li>
        <li>
          <%= link_to destroy_customer_session_path, method: :delete, class: "nav-link mt-3" do %>
          <i class="fas fa-sign-out-alt"></i>
            ログアウト
          <% end %>
        </li>
      <!--ログイン前画面-->
      <% else %>
        <li>
          <%= link_to new_customer_registration_path, class: "nav-link mt-3" do %>
          <i class="fas fa-user-edit"></i>
            新規登録
          <% end %>
        </li>
        <li>
          <%= link_to new_customer_session_path, class: "nav-link mt-3" do %>
          <i class="fas fa-sign-in-alt"></i>
            ログイン
          <% end %>
        </li>
        <li>
          <%= link_to customers_guest_sign_in_path, class: "nav-link mt-3", method: :post  do %>
          <i class="fa-solid fa-users"></i>
            ゲストログイン
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>  
</nav>